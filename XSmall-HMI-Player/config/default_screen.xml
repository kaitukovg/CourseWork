<Screen width="1024" height="768" background="240,240,240">
<Rectangle name="Status Panel" x="20" y="20" width="300" height="150" color="173,216,230" variable="panel_status">
<Condition value="0" color="0,0,255"/>
<Condition value="1" color="255,255,0"/>
<Condition value="2" color="255,0,0"/>
</Rectangle>
<Text name="Temperature Display" x="30" y="30" content="Temperature: %f Â°C" font="arial.ttf" size="18" color="0,0,0" variable="temperature_value"/>
<Text name="Pressure Display" x="30" y="60" content="Pressure: %f bar" font="arial.ttf" size="18" color="0,0,0" variable="pressure_value"/>
<InputField name="Setpoint Input" x="30" y="120" width="200" height="30" font="arial.ttf" size="16" variable="setpoint_value"/>
<Button name="Apply Button" x="240" y="120" width="100" height="30" text="Apply" font="arial.ttf" size="16" color="144,238,144"/>
<Line name="Separator Line" x1="20" y1="200" x2="420" y2="200" color="0,0,0" thickness="1"/>
<HistoryGraph name="Temperature Graph" x="20" y="220" width="400" height="200" variable="temperature_history" lineColor="0,0,255" gridColor="200,200,200"/>
<Image name="System Logo" x="450" y="20" width="300" height="200" file="assets/images/logo.png"/>
<Button name="Status Toggle" x="450" y="240" width="150" height="40" text="Toggle Status" font="arial.ttf" size="16" color="255,165,0"/>
<Button name="Temp Increase" x="450" y="300" width="80" height="30" text="Temp +" font="arial.ttf" size="14" color="255,200,200"/>
<Button name="Temp Decrease" x="540" y="300" width="80" height="30" text="Temp -" font="arial.ttf" size="14" color="200,200,255"/>
</Screen>
